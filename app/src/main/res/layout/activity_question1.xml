<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="wrap_content"
    android:background="@color/black">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".Question1">

        <TextView
            android:id="@+id/activity_question1_tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="30sp"
            android:layout_marginRight="30sp"
            android:fontFamily="@font/comfortaa_light"
            android:text="Section 1"
            android:textAlignment="center"
            android:textColor="#F8DE7E"
            android:textSize="35sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/activity_question1_tvTitle2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_question1_tvTitle"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="30sp"
            android:fontFamily="@font/comfortaa_light"
            android:text="Residence &amp; Utilities"
            android:textAlignment="center"
            android:textColor="#F8DE7E"
            android:textSize="35sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/activity_question1_Q1_People"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="30sp"
            android:layout_marginRight="30sp"
            android:layout_below="@id/activity_question1_tvTitle2"
            android:fontFamily="@font/imprima"
            android:text="1. How many people live in your household ?"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/activity_question1_A1_People"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_question1_Q1_People"
            android:layout_marginLeft="125sp"
            android:layout_marginTop="30sp"
            android:layout_marginRight="125sp"
            android:background="@color/white"
            android:hint="Enter here"
            android:padding="3sp"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/activity_question1_Q2_Electricity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_question1_A1_People"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="40sp"
            android:layout_marginRight="30sp"
            android:fontFamily="@font/imprima"
            android:text="2. How much electricity do you use ?"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <LinearLayout
            android:id="@+id/layout_Electricity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_question1_Q2_Electricity"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/activity_question1_A2_Electricity_A"
                android:layout_width="120sp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="110sp"
                android:layout_marginTop="30sp"
                android:background="@color/white"
                android:hint="Enter here"
                android:padding="3sp"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/activity_question1_A2_Electricity_B"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23sp"
                android:layout_marginTop="30sp"
                android:fontFamily="@font/imprima"
                android:text="kWh"
                android:textColor="@color/white"
                android:textSize="20sp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/activity_question1_Q3_NaturalGas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30sp"
            android:fontFamily="@font/imprima"
            android:layout_below="@id/layout_Electricity"
            android:text="3. How much natural gas do you use ?"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <LinearLayout
            android:id="@+id/layout_NaturalGas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_question1_Q3_NaturalGas"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/activity_question1_A3_NaturalGas_A"
                android:layout_width="120sp"
                android:layout_height="wrap_content"
                android:hint="Enter here"
                android:layout_marginTop="30sp"
                android:layout_marginLeft="110sp"
                android:textAlignment="center"
                android:padding="3sp"
                android:background="@color/white"/>

            <TextView
                android:id="@+id/activity_question1_A3_NaturalGas_B"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30sp"
                android:layout_marginLeft="23sp"
                android:fontFamily="@font/imprima"
                android:text="kWh"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/activity_question1_Q4_LPG"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="40sp"
            android:layout_marginRight="30sp"
            android:layout_below="@id/layout_NaturalGas"
            android:fontFamily="@font/imprima"
            android:text="4. How much LPG do you use ?"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <LinearLayout
            android:id="@+id/layout_LPG"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_question1_Q4_LPG"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/activity_question1_A4_LPG_A"
                android:layout_width="120sp"
                android:layout_height="wrap_content"
                android:hint="Enter here"
                android:layout_marginTop="30sp"
                android:layout_marginLeft="110sp"
                android:padding="3sp"
                android:textAlignment="center"
                android:background="@color/white" />

            <TextView
                android:id="@+id/activity_question1_A4_LPG_B"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_question1_Q5"
                android:layout_marginTop="30sp"
                android:layout_marginLeft="23sp"
                android:fontFamily="@font/imprima"
                android:text="litres"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/activity_question1_Q5_Water"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="40sp"
            android:layout_marginRight="30sp"
            android:layout_below="@id/layout_LPG"
            android:fontFamily="@font/imprima"
            android:text="5. How much water do you consume ?"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <LinearLayout
            android:id="@+id/layout_Water"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_question1_Q5_Water"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/activity_question1_A5_Water_A"
                android:layout_width="120sp"
                android:layout_height="wrap_content"
                android:hint="Enter here"
                android:layout_marginTop="30sp"
                android:layout_marginLeft="110sp"
                android:textAlignment="center"
                android:padding="5sp"
                android:background="@color/white" />

            <TextView
                android:id="@+id/activity_question1_A5_Water_B"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_question1_Q6_Water"
                android:layout_marginTop="30sp"
                android:layout_marginLeft="23sp"
                android:text="litres"
                android:fontFamily="@font/imprima"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </LinearLayout>

        <Button
            android:id="@+id/activity_question1_btnNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Next"
            android:textAllCaps="false"
            android:fontFamily="@font/delius"
            android:textSize="23sp"
            android:layout_below="@id/layout_Water"
            android:layout_marginTop="50sp"
            android:layout_marginLeft="100sp"
            android:layout_marginRight="100sp"
            android:layout_marginBottom="30sp"/>

    </RelativeLayout>

</ScrollView>