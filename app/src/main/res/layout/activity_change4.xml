            android:hint="@string/change4_hint"
            android:inputType="numberDecimal"
            android:textAlignment="center"
            android:textSize="22sp"
            android:layout_width="150dp"
            android:layout_centerHorizontal="true"
            style="@style/TextViewStyle.Input"
            android:padding="2dp" />

        <TextView
            android:id="@+id/change4_vehicle"
            android:layout_below="@id/change4_gadget_ans"
            android:text="@string/change4_vehicle"
            style="@style/TextViewStyle.SubInfo"
            android:textSize="22sp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp" />

        <EditText
            android:id="@+id/change4_vehicle_ans"
            android:layout_below="@id/change4_vehicle"
            android:autofillHints="vehicle budget"
