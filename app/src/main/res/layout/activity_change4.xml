<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Change4">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/change4_title"
            android:text="@string/change4_title"
            android:textSize="28sp"
            android:layout_marginTop="60dp"
            style="@style/TextViewStyle.MainTitle" />

        <TextView
            android:id="@+id/change4_q9"
            android:layout_below="@id/change4_title"
            android:text="@string/change4_diet"
            style="@style/TextViewStyle.SubInfo"
            android:textSize="22sp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="40dp" />

        <Spinner
            android:id="@+id/change4_diet_ans"
            android:layout_below="@id/change4_q9"
            android:padding="2sp"
            android:layout_marginTop="25dp"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:background="@drawable/input_background"
            android:spinnerMode="dropdown" />

        <TextView
            android:id="@+id/change4_q10"
            android:layout_below="@id/change4_diet_ans"
            android:text="@string/change4_q10"
            style="@style/TextViewStyle.SubInfo"
            android:textSize="22sp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="40dp" />

        <TextView
            android:id="@+id/change4_food"
            android:layout_below="@id/change4_q10"
            android:text="@string/change4_food"
            style="@style/TextViewStyle.SubInfo"
            android:textSize="22sp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp" />

        <EditText
            android:id="@+id/change4_food_ans"
            android:layout_below="@id/change4_food"
            android:autofillHints="food budget"
            android:hint="@string/change4_hint"
            android:inputType="numberDecimal"
            android:textAlignment="center"
            android:textSize="22sp"
            android:layout_width="150dp"
            android:layout_centerHorizontal="true"
            style="@style/TextViewStyle.Input"
            android:padding="2dp" />

        <TextView
            android:id="@+id/change4_medicine"
            android:layout_below="@id/change4_food_ans"
            android:text="@string/change4_medicine"
            style="@style/TextViewStyle.SubInfo"
            android:textSize="22sp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp" />

        <EditText
            android:id="@+id/change4_medicine_ans"
            android:layout_below="@id/change4_medicine"
            android:autofillHints="medicine budget"
            android:hint="@string/change4_hint"
            android:inputType="numberDecimal"
            android:textAlignment="center"
            android:textSize="22sp"
            android:layout_width="150dp"
            android:layout_centerHorizontal="true"
            style="@style/TextViewStyle.Input"
            android:padding="2dp" />

        <TextView
