            android:textAlignment="center"
            android:textSize="22sp"
            android:layout_width="150dp"
            android:layout_centerHorizontal="true"
            style="@style/TextViewStyle.Input"
            android:padding="2dp" />

        <TextView
            android:id="@+id/change4_books"
            android:layout_below="@id/change4_clothes_ans"
            android:text="@string/change4_books"
            style="@style/TextViewStyle.SubInfo"
            android:textSize="22sp"
            android:layout_marginHorizontal="30dp"
